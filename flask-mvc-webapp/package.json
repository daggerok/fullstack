{
  "name": "flask-mvc-webapp",
  "devDependencies": {
    "pm2": "5.3.0"
  },
  "scripts": {
    "predeployment": "source .venv/bin/activate ; pip install -r requirements.txt",
    "deployment": "pm2 start 'python3 app.py' --name app",
    "ls": "pm2 ls",
    "show": "pm2 show app",
    "redeploy": "pm2 restart app",
    "stop": "pm2 stop app",
    "undeploy": "pm2 delete app",
    "kill": "pm2 kill"
  }
}
